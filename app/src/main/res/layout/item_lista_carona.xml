<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4">

    <ImageView
        android:id="@+id/imgLogo"
        android:src="@drawable/maphome"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtListaCaronaNome"
        android:hint="Nome e Sobrenome"
        android:layout_alignTop="@+id/imgLogo"
        android:layout_toRightOf="@+id/imgLogo"
        android:layout_toEndOf="@+id/imgLogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtItemCaronaOrigem"
        android:hint="CaronaOrigem"
        android:layout_alignBottom="@+id/imgLogo"
        android:layout_alignLeft="@+id/txtListaCaronaNome"
        android:layout_alignStart="@+id/txtListaCaronaNome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtItemCaronaDestino"
        android:hint="CaronaDestino"
        android:layout_alignTop="@+id/txtItemCaronaOrigem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>